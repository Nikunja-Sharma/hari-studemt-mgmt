# MongoDB Connection
# For local MongoDB without authentication:
MONGODB_URI=mongodb://localhost:27017/student_management_db

# For local MongoDB with authentication:
# MONGODB_URI=mongodb://username:password@localhost:27017/student_management_db

# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/student_management_db

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=3000

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# Node Environment (development or production)
NODE_ENV=development
